<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="16dp">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Employee Id" />

        <TextView
            android:id="@+id/empId"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:text="EMP-001"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Name" />

        <TextView
            android:id="@+id/name"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Age" />

        <TextView
            android:id="@+id/age"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Role" />

        <TextView
            android:id="@+id/role"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Annual Income" />

        <TextView
            android:id="@+id/annualIncome"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bonusLabel"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Number of" />

        <TextView
            android:id="@+id/bonus"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle" />

        <TextView
            android:id="@+id/vehicleKind"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle Make" />

        <TextView
            android:id="@+id/vehicleMake"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle Category" />

        <TextView
            android:id="@+id/vehicleCategory"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle Color" />

        <TextView
            android:id="@+id/vehicleColor"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vehicleExtrasLabel"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle Extras" />

        <TextView
            android:id="@+id/vehicleExtras"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:padding="4dp"
            android:text="Vehicle Plate" />

        <TextView
            android:id="@+id/vehiclePlate"
            android:layout_row="11"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </GridLayout>
</ScrollView>